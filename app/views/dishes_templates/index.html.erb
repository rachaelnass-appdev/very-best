
<div class="row mb-1 mt-2">
  <div class="col-md-3">
    <%= search_form_for @q, :class => "collapse", :id => "dishes_filters" do |f| %>
      <p class="lead">Narrow results:</p>

    <div class="form-group">
      <%= f.label :name_cont, "Name contains" %>
      <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
    </div>
    
    <div class="form-group">
    <% Cuisine.all.each do |cuisine| %>
      <label>
        <%= check_box_tag('q[cuisine_id_eq_any][]', cuisine.id, (true if @q.cuisine_id_eq_any.try(:include?, cuisine.id))) %>
        <%= cuisine.name %>
      </label>
    <% end %>
    </div>
      
      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/dishes" class="btn btn-secondary btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-secondary btn-block mb-1" data-toggle="collapse" href="#dishes_filters">
      Show Filters
    </a>
  </div>


  <div class="col-md-6">
    <table class="table table-striped table-hover">
      <tr>
        <th>The very best...</th>
        <th>is at...</th>
        <th></th>
      </tr>

      <% @dishes.each do |dish| %>
      <tr>
        <td><a href="/dishes/<%=dish.id%>"><%= dish.name %></a></td>
        
        <td>
          <form action="/create_bookmark" class="form-inline" method="post">
            
            <!-- Hidden Label and input for dish_id -->
            <input type="hidden" name="dish_id" value="<%= dish.id %>">
            
            <!-- Label and input for venue_id -->
            <label for="venue_id" class="form-group control-label sr-only">
              Venue
            </label>
            <%= select_tag("venue_id", options_from_collection_for_select(Venue.all, :id, :name, @bookmark.try(:venue_id)), :class => "form-control form-control-sm mr-sm-1", :include_blank => "Choose a new venue...") %>
            
            <!-- Hidden Label and input for user_id -->
            <input type="hidden" name="user_id" value="<%= current_user.id %>">
            
            <button class="form-group btn btn-primary btn-sm">
               <i class="fa fa-heart"> 
               </i>
            </button>
            
            <!-- Hidden Label and input for notes -->
            <input type="hidden" name="notes" value="">
            
          </form>
          
        </td>
        
        <td>
          <% if dish.cuisine.present? %>
            <a href="/cuisines/<%= dish.cuisine.id %>">
              <%= dish.cuisine.name %>
            </a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>

  </div>
  
  <div class="col-md-3">
    <a href="/venues/new" class="btn btn-block btn-success">Add a new venue</a>
  </div>
  
</div>
